<div class="user-form">
  <div class="form-title"><h1>Sign Up</h1></div>
  <%= form_for @user do |form| %>
    <div class="form-field">
      <div class="field-label">
        <%= form.label :username %>
      </div>
      <div class="field-input">
        <%= form.text_field :username %>
        <% end %>
      </div>
    </div>
</div>
