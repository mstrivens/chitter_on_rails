<div class='user-form'>
  <div class='form-title'><h1>Log-In<h1/></div>
<!--  <p id='alert'><%= alert %></p> -->
  <%= form_tag sessions_path do |form| %>
    <div class='form-field'>
      <div class='field-label'>
        <%= label_tag :username %>
      </div>
      <div class='field-input'>
        <%= text_field_tag :username %>
      </div>
    </div>
    <div class='form-field'>
      <div class='field-label'>
        <%= label_tag :password %>
      </div>
      <div class='field-input'>
        <%= password_field_tag :password %>
      </div>
    </div>
    <input type="submit" name='user-login-submit' class="form-submit">
  <% end %>
</div>
